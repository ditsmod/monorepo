{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noImplicitOverride": true,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule":true,
    "paths": {
      "#postman-collection": ["./test/conduit.postman-collection.json"],
