{
  "private": true,
  "type": "module",
  "author": "Your Name Here",
  "name": "server",
  "description": "Ditsmod application",
  "version": "1.0.0",
  "engines": {
    "node": ">= 18.14.0"
  },
  "directories": {
    "lib": "src"
  },
  "scripts": {
    "start": "nodemon --enable-source-maps -r dotenv/config dist/main.js",
    "start-prod": "node -r dotenv/config dist/main.js",
    "esm-jest": "node --experimental-vm-modules --no-warnings=ExperimentalWarning --enable-source-maps ../../node_modules/jest/bin/jest.js",
    "test": "tsc -b tsconfig.test.json && npm run esm-jest",
    "build": "tsc -b tsconfig.build.json",
    "watch": "npm run build -- --watch",
    "clean": "rimraf dist*",
    "postinstall": "npm run clean"
  },
  "imports": {
    "#src/*": "./dist/*",
    "#routed/*": "./dist/app/modules/routed/*",
    "#service/*": "./dist/app/modules/service/*"
  },
  "dependencies": {
    "@ditsmod/body-parser": "^2.13.1",
    "@ditsmod/core": "^2.51.1",
    "@ditsmod/routing": "^2.1.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@ditsmod/testing": "^2.7.0",
    "@types/supertest": "^2.0.14",
    "supertest": "^6.3.3"
  }
}
