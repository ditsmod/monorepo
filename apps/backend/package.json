{
  "private": true,
  "type": "module",
  "author": "Your Name Here",
  "name": "backend",
  "description": "Ditsmod application",
  "version": "1.0.0",
  "directories": {
    "lib": "src"
  },
  "scripts": {
    "start": "npm run build && nodemon --enable-source-maps --env-file=.env dist/main.js",
    "start-prod": "node --env-file=.env dist/main.js",
    "esm-jest": "node --env-file=.env --experimental-vm-modules --no-warnings=ExperimentalWarning --enable-source-maps ../../node_modules/jest/bin/jest.js",
    "test": "tsc -b tsconfig.test.json && npm run esm-jest",
    "build": "tsc -b tsconfig.build.json",
    "watch": "npm run build -- --watch",
    "clean": "rimraf dist*",
    "postinstall": "npm run clean"
  },
  "imports": {
    "#app/*": "./dist/app/*",
    "#routed/*": "./dist/app/modules/routed/*",
    "#service/*": "./dist/app/modules/service/*"
  },
  "dependencies": {
    "@ditsmod/body-parser": "^2.13.1",
    "@ditsmod/core": "^2.52.0",
    "@ditsmod/routing": "^2.2.0"
  },
  "devDependencies": {
    "@ditsmod/testing": "^2.8.0",
    "@types/supertest": "^6.0.2",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">= 20.6.0"
  }
}
