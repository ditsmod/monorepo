{
  "private": true,
  "type": "module",
  "name": "monorepo-starter",
  "version": "1.0.0",
  "description": "Starter for monorepositories",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "test-apps": "tsc -b apps/tsconfig.test.json && npm run esm-jest",
    "test-packages": "tsc -b packages/tsconfig.test.json && npm run esm-jest",
    "test-all": "npm run test-packages && npm run test-apps",
    "esm-jest": "node --experimental-vm-modules --no-warnings=ExperimentalWarning --enable-source-maps node_modules/jest/bin/jest.js",
    "start": "npm run build-packages && npm run build-apps && nodemon --enable-source-maps -r dotenv/config apps/backend/dist/main.js dotenv_config_path=apps/backend/.env",
    "start-prod": "node -r dotenv/config apps/backend/dist/main.js dotenv_config_path=apps/backend/.env",
    "build-apps": "tsc -b apps/tsconfig.json",
    "build-packages": "tsc -b packages/tsconfig.json",
    "watch": "npm run build-apps -- --watch",
    "clean": "rimraf apps/*/dist*"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.9",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.19.31",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^2.8.8",
    "rimraf": "^4.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
