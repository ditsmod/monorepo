{
  "private": true,
  "type": "module",
  "name": "monorepo-starter",
  "version": "1.0.0",
  "description": "Starter for monorepositories",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "tsc -b packages/tsconfig.test.json && npm run esm-jest",
    "esm-jest": "node --experimental-vm-modules --no-warnings=ExperimentalWarning --enable-source-maps node_modules/jest/bin/jest.js",
    "start": "npm run build && nodemon --enable-source-maps -r dotenv/config packages/server/dist/main.js dotenv_config_path=packages/server/.env",
    "start-prod": "node -r dotenv/config packages/server/dist/main.js dotenv_config_path=packages/server/.env",
    "build": "tsc -b packages/tsconfig.json",
    "watch": "npm run build -- --watch",
    "clean": "rimraf packages/*/dist*"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.19.14",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^2.8.8",
    "rimraf": "^4.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
