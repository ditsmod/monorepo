{
  "private": true,
  "name": "monorepo-starter",
  "version": "1.0.0",
  "description": "Starter for monorepositories",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "jest",
    "start": "nodemon -e ts --exec ts-node -r tsconfig-paths/register packages/server/src/main.ts --project=packages/server/tsconfig.json",
    "start-prod": "node -r tsconfig-paths/register packages/server/dist/main.js",
    "boot": "lerna bootstrap",
    "pub": "lerna publish from-package",
    "build": "yarn clean && tsc -b -f packages",
    "clean": "rimraf packages/server/dist packages/shared/dist packages/**/out-tsc* packages/**/*.tsbuildinfo"
  },
  "devDependencies": {
    "@jest/types": "^29.2.1",
    "@types/eslint": "^8.4.7",
    "@types/node": "^18.11.3",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.26.0",
    "jest": "^29.2.1",
    "lerna": "^6.0.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
